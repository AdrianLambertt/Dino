<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/background_card">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_card" />
            <corners android:radius="16dp" />
            <stroke
                android:width="4dp"
                android:color="@color/background_card" />

            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp"/>
        </shape>
    </item>
</ripple>